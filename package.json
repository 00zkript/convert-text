{
  "name": "convert-text",
  "displayName": "Convert text",
  "description": "Una extensión para Visual Studio Code que permite realizar transformaciones de texto en el código fuente.",
  "version": "0.1.0",
  "icon": "media/iconoir--text-box.png",
  "publisher": "00zkript",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:convertText.pascalCase",
    "onCommand:convertText.snakeCase",
    "onCommand:convertText.camelCase",
    "onCommand:convertText.constCase",
    "onCommand:convertText.upperCase",
    "onCommand:convertText.lowerCase",
    "onCommand:convertText.capitalizeCase",
    "onCommand:convertText.titleCase",
    "onCommand:convertText.slugCase"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "convert-text.pascalCase",
        "title": "Convert text: Pascal case"
      },
      {
        "command": "convert-text.snakeCase",
        "title": "Convert text: Snake case"
      },
      {
        "command": "convert-text.camelCase",
        "title": "Convert text: Camel case"
      },
      {
        "command": "convert-text.constCase",
        "title": "Convert text: Const case"
      },
      {
        "command": "convert-text.upperCase",
        "title": "Convert text: Upper case"
      },
      {
        "command": "convert-text.lowerCase",
        "title": "Convert text: Lower case"
      },
      {
        "command": "convert-text.capitalizeCase",
        "title": "Convert text: Capitalize case"
      },
      {
        "command": "convert-text.titleCase",
        "title": "Convert text: Title case"
      },
      {
        "command": "convert-text.slugCase",
        "title": "Convert text: Slug case"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "author": "00zkript",
  "repository": {
    "type": "git",
    "url": "https://github.com/00zkript/convert-text"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  }
}
